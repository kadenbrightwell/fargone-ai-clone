//get inputs
up_key = UP_KEY;
left_key = LEFT_KEY;
down_key = DOWN_KEY;
right_key = RIGHT_KEY;

accept_key = INTERACT_KEY;

//store # options in current menu
op_length = array_length(option[menu_level]);

//move through the pages
pos += down_key - up_key;
if(pos>=op_length){ pos=0; }
if(pos<0){ pos=op_length-1; }

//using the options
if (accept_key) {
    var _sml = menu_level;

    switch (menu_level) {
        case 0:
			icon = false;
            switch (pos) {
                case 0:
                    room_goto(rm_init);
                    break;
                case 1:
                    menu_level = 1;
                    break;
                case 2:
                    game_end();
                    break;
            }
            break;

        case 1:
			icon = false;
            switch (pos) {
                case 0: break; //controls
                case 1: menu_level = 4; break; //language
                case 2: menu_level = 2; break; //volume
                case 3: menu_level = 0; break; //back
            }
            break;

        case 2:
			icon = false;
            switch (pos) {
                case 0:
                    vol_choice = 0;
                    menu_level = 3;
                    break;
                case 1:
                    vol_choice = 1;
                    menu_level = 3;
                    break;
                case 2:
                    vol_choice = 2;
                    menu_level = 3;
                    break;
                case 3:
                    vol_choice = 3;
                    menu_level = 3;
                    break;
                case 4:
                    menu_level = 1;
                    break;
            }
            break;

        case 3:
			icon = false;
            switch (pos) {
                case 0: set_vol_val(vol_choice, 1.00); menu_level = 2; obj_roommusichandler.title_menu_volume_changed(); break;
                case 1: set_vol_val(vol_choice, 0.75); menu_level = 2; obj_roommusichandler.title_menu_volume_changed(); break;
                case 2: set_vol_val(vol_choice, 0.50); menu_level = 2; obj_roommusichandler.title_menu_volume_changed(); break;
                case 3: set_vol_val(vol_choice, 0.25); menu_level = 2; obj_roommusichandler.title_menu_volume_changed(); break;
                case 4: set_vol_val(vol_choice, 0.00); menu_level = 2; obj_roommusichandler.title_menu_volume_changed(); break;
                case 5: menu_level = 2; break;
            }
            break;
			
		case 4:
			icon = true;
			icon_spr = [spr_menu_button_yellow_off, spr_menu_button_yellow_on];
			icon_margin = 1;
			icon_shift = max(sprite_get_width(icon_spr[0]),sprite_get_width(icon_spr[1])) + 2*icon_margin;
			icon_spread = max(0, op_space-max(sprite_get_height(icon_spr[0]),sprite_get_height(icon_spr[1])) + 2*icon_margin);
			switch(pos){
				case 0: LANG = LANG_ENGLISH; select(0); break;
				case 1: LANG = LANG_SPANISH; select(1); break;
				case 2: LANG = LANG_FRENCH; select(2); break;
				case 3: LANG = LANG_GERMAN; select(3); break;
				case 4: LANG = LANG_FARSI; select(4); break;
				case 5: LANG = LANG_CHINESE; select(5); break;
				case 6: LANG = LANG_JAPANESE; select(6); break;
				case 7: menu_level = 1; break;
			}
			break;
			
		default:
			icon = false;
			break;
    }

    // Reset position if needed
    if (_sml != menu_level) { pos = 0; selection[menu_level] = -1; }

    // Fix option length
    op_length = array_length(option[menu_level]);
}